{
    "name": "backend",
    "version": "1.0.0",
    "description": "Express Prisma TypeScript 最佳实践",
    "main": "dist/app.js",
    "scripts": {
        "start": "NODE_ENV=production node -r tsconfig-paths/register dist/app.js",
        "dev": "NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
        "build": "tsc",
        "test": "jest",
        "seed": "NODE_ENV=development ts-node --transpile-only prisma/seed.ts",
        "prisma:studio": "prisma studio",
        "prisma:seed": "prisma db seed",
        "prisma:generate": "prisma generate",
        "prisma:generate--prod": "NODE_ENV=production prisma generate",
        "prisma:migrate": "prisma migrate dev --name init",
        "prisma:migrate:create-only": "prisma migrate dev --create-only --name add_phone_to_user",
        "prisma:migrate:reset": "prisma migrate reset --force",
        "prisma:migrate:redo": "prisma migrate reset --force && prisma migrate dev --name init",
        "prisma:migrate:redo--prod": "NODE_ENV=production prisma migrate reset --force && prisma migrate dev --name init",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "prisma:migrate:deploy--prod": "NODE_ENV=production prisma migrate deploy",
        "prisma:migrate:resolve:applied": "prisma migrate resolve --applied 20250314072021_add_phone_to_user",
        "prisma:migrate:resolve:back": "prisma migrate resolve --rolled-back 20250314072021_add_phone_to_user",
        "prisma:db:pull": "prisma db pull",
        "prisma:db:push": "prisma db push"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "helmet": "^8.0.0",
        "i18next": "^24.2.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "prisma-extension-pagination": "^0.7.5",
        "reflect-metadata": "^0.2.2",
        "winston": "^3.17.0",
        "zod": "^3.24.2",
        "zod-i18n-map": "^2.27.0",
        "zod-prisma-types": "^3.2.4"
    },
    "devDependencies": {
        "@prisma/client": "6.5.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.13.10",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prisma": "^6.5.0",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.14",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.2"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/client",
            "@prisma/engines",
            "esbuild",
            "prisma"
        ]
    }
}
